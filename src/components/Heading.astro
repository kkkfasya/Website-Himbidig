---
import { cn } from "../utils/utils";
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"h1"> {
  as?: "h1" | "h2" | "h3" | "h4" | "h5" | "h6";
  size?: "default" | "large";
}

const { as = "h1", size = "default", class: className, ...attrs } = Astro.props;
---

<as
  class={cn(
    "text-balance font-bold text-white",
    size === "default" && "text-4xl tracking-tight md:text-6xl xl:text-8xl",
    size === "large" &&
      "letter-spacin text-8xl tracking-tighter md:text-[7.5rem] 2xl:text-[10rem]",
    className,
  )}
  {...attrs}
>
</as>
